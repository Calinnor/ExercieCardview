<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    >
    <!--res-auto apparait normalement avec l'implementation de corner-->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="182dp"
        android:background="@drawable/degrade">

        <ImageView
            android:id="@+id/paysage_paris_img"
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:background="@drawable/paysage_paris_img"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/newspaper_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="60dp"
            android:text="Le journal des dÃ©butants"
            android:textColor="#ffffff"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/news_overview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/newspaper_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Contenu de la news"
            android:textColor="#ffffff"
            android:textSize="12dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/date"
            android:layout_marginLeft="10dp"
            android:text="Bibi"
            android:textColor="#ffffff"
            android:textSize="11dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="155dp"
            android:layout_marginLeft="320dp"
            android:text="17/05/2019"
            android:textColor="#fbf9c1"
            android:textSize="12dp"
            android:textStyle="bold" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>